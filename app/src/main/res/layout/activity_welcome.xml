<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_splash"
        android:contentDescription="Logo da Premoldaço" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo à Premoldaço"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que você deseja fazer?"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnGoToAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar e Acompanhar Orçamentos (Entrar ou Criar Conta)" />

    <Button
        android:id="@+id/btnGoToCalculator"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Apenas Calcular um Orçamento" />

</LinearLayout>