<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Título -->
    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- Botão para Auth (fechado corretamente com />) -->
    <Button
        android:id="@+id/btnGoToAuth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_auth"
        android:contentDescription="@string/cd_btn_auth"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botão para Calculadora (fechado corretamente com />) -->
    <Button
        android:id="@+id/btnGoToCalculator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculator"
        android:contentDescription="@string/cd_btn_calculator"
        app:layout_constraintTop_toBottomOf="@id/btnGoToAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>