<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/tvObraName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_obra_name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDataCriacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_data"
        app:layout_constraintTop_toBottomOf="@id/tvObraName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTotalArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_area"
        app:layout_constraintTop_toBottomOf="@id/tvDataCriacao"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_status"
        android:contentDescription="@string/cd_chip_status"
        app:layout_constraintTop_toTopOf="@id/tvObraName"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>